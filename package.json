{
	"name": "chrbala-linter",
	"version": "3.2.1",
	"description": "My own linter preferences",
	"main": "dist/index.js",
	"keywords": [
		"eslint"
	],
	"scripts": {
		"test": "ava",
		"build": "rollup -c",
		"lint": "eslint .eslintrc.js && eslint src",
		"validate": "npm run build && npm run lint && npm run test",
		"push": "npm run build && npm run validate && npm publish",
		"node": "node"
	},
	"author": "Chris Bala",
	"license": "ISC",
	"peerDependencies": {
		"eslint": "^4.0.0"
	},
	"devDependencies": {
		"ava": "^0.25.0",
		"babel-preset-es2015": "6.24.1",
		"babel-preset-stage-0": "6.24.1",
		"rollup": "^0.64.1"
	},
	"dependencies": {
		"babel-core": "^6.26.3",
		"babel-eslint": "^8.2.6",
		"eslint": "^5.3.0",
		"eslint-plugin-flowtype": "2.50.0",
		"eslint-plugin-header": "^1.0.0",
		"eslint-plugin-no-warning-comments-clone": "0.0.1",
		"eslint-plugin-react": "^7.10.0",
		"rollup-plugin-babel": "^3.0.7",
		"rollup-plugin-buble": "^0.19.2"
	},
	"ava": {
		"require": [
			"babel-register"
		],
		"babel": "inherit"
	}
}
