{
	"name": "chrbala-linter",
	"version": "2.1.0",
	"description": "My own linter preferences",
	"main": "dist/index.js",
	"keywords": [
		"eslint"
	],
	"scripts": {
		"test": "ava",
		"build": "rollup -c",
		"lint": "eslint .eslintrc.js && eslint src",
		"validate": "npm run build && npm run lint && npm run test",
		"push": "npm run build && npm run validate && npm publish"
	},
	"author": "Chris Bala",
	"license": "ISC",
	"peerDependencies": {
		"eslint": "^4.0.0"
	},
	"devDependencies": {
		"ava": "^0.24.0",
		"babel-preset-es2015": "6.24.1",
		"babel-preset-stage-0": "6.24.1",
		"rollup": "^0.53.3"
	},
	"dependencies": {
		"babel-core": "^6.17.0",
		"babel-eslint": "^8.1.2",
		"eslint": "^4.0.0",
		"eslint-plugin-flowtype": "2.40.1",
		"eslint-plugin-header": "^1.0.0",
		"eslint-plugin-no-warning-comments-clone": "0.0.1",
		"eslint-plugin-react": "^7.0.0",
		"rollup-plugin-babel": "^3.0.2",
		"rollup-plugin-buble": "^0.18.0"
	},
	"ava": {
		"require": [
			"babel-register"
		],
		"babel": "inherit"
	}
